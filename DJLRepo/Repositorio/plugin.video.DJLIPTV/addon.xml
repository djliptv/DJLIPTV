        <checksum>https://raw.githubusercontent.com/djliptv/DJLRepo/master/Repositorio/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/djliptv/master/Repositorio/</datadir>
    </extension>
  
  <extension point="xbmc.addon.metadata">
    <summary>Addon DJLIPTV</summary>
    <description lang="en">[COLOR white][B]GRATIS Y PARA TODOS[/B][/COLOR]</description>
    <platform>all</platform>
